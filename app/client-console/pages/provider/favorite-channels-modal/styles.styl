@import '../../../styling/color.styl'
@import '../../../styling/button.styl'
@import '../../../styling/switch.styl'

.favorite-channels-modal
	.ant-modal-content
		border-radius: 10px

	.ant-modal-close
		display: none

	.ant-modal-header
		padding: 25px 35px 9px
		border-bottom: 0
		border-top-left-radius: 10px
		border-top-right-radius: 10px

	.ant-modal-title
		display: flex
		align-items: center

		img
			margin-right: 8px

	.ant-modal-body
		padding: 9px 35px 14px

	.ant-modal-footer
		padding: 14px 35px 16px
		border-top: 0

		button
			width: 88px
			height: 32px
			border-radius: 5px
			&.ant-btn-primary
				button-default-setting()
				margin-left: 10px
				background: $btn-blue-background
				border-color: $btn-blue-background
				&:hover
					background: $btn-blue-background-hover
				&:focus,
				&:active
					background: $btn-blue-background-pressed

.favorite-channels__list-draggable-table
	table:not(&:empty)
		display: block
		border-bottom: 1px solid rgba(0,0,0, 0.15)

	.ant-table-tbody
		height: 345px
		overflow-y: auto
		display: inline-block
		border-bottom: 1px solid rgba(0,0,0, 0.15)

		&:empty
			height: auto

		> tr
			display: table
			table-layout: fixed
			width: 100%

	.ant-table-tbody > tr > td,
	.ant-table-thead > tr > th
		padding: 8px
		width: 150px
		text-align: left
		&:first-child
			width: 30px
		&:last-child
			width: 100px
			text-align: center

	.ant-table-tbody > tr > td
		color: $black
		&:first-child
			color: $dark-grey3

	.ant-table-tbody > tr
		&:last-child > td
			border-bottom: 0
		&:hover:not(.ant-table-expanded-row) > td
			background-color: $light-blue5

	.ant-table-thead
		display: inline-block
		width: 100%

	.ant-table-thead > tr > th
		background-color: $light-blue5
		&:first-child
			border-top-left-radius: 0

		&:last-child
			border-top-right-radius: 0

	.ant-table-column-title
		color: $text-light-grey3
