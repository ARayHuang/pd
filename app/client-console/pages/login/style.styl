@import '../../styling/color.styl'

$login-font-size = 14px
$login-font-color = $black
$login-field-placeholder-color = $light-grey60
$login-field-height = 40px
$login-field-bg-color = #d4dbe1

.login-page-wrapper
	position: relative

.login-page
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background: url(./images/bg.png) no-repeat
	background-attachment: fixed
	background-size: cover
	background-position: center

	&__content
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		width: 100%
		max-width: 552px
		padding: 50px 0 135px
		border-radius: 19px
		box-shadow: 0 0 40px 0 rgba(111, 108, 105, 0.18)
		background-color: $white
		color: $login-font-color

	&__logo
		text-align: center
		margin-bottom: 15px

	&__title
		color: $black
		font-size: 20px
		text-align: center
		margin-bottom: 40px

	&__form
		width: 100%
		max-width: 344px
		padding: 0 20px
		margin: 0 auto

		form
			height: 240px
			position: relative

		.ljit-form-button-row
			margin-top: 50px
			max-width: 344px

		.ljit-form-label
			margin-bottom: 15px

		.ljit-form-search-btn
			margin: 0
			width: 100%
			font-size: 16px
			height: $login-field-height
			background-color: $blue
			border-color: $blue
			border-radius: 6px

		.ljit-form-button-row
			> .ljit-form-col
				width: 100%
				margin-left: 0

				> .ant-form-item
					margin-bottom: 0

		.ant-input-affix-wrapper
			> .ant-input
				padding: 10px 7px
				&:hover,
				&:focus,
				&:active
					border-color: $blue
					box-shadow: none

		.ant-form-item-required::before
			display: none

		&__input
			&:read-only
				background-color: transparent

			> .ant-input
				height: $login-field-height
				border: 1px solid $login-field-bg-color
				background-color: $login-field-bg-color
				color: $login-font-color
