@import '../../../styling/color.styl'
@import '../../../styling/height.styl'

$border-color = $ivory-grey

.ljit-layout-content
	min-height: auto

.order-detail-page
	border-radius: 11px 11px 0 0
	background-color: $white
	padding: 20px
	position: relative
	&.layout__wrap
		min-height: "calc(%s - %s)" % ($adjust-screen-min-height 125px)
		max-height: "calc(%s - %s)" % ($adjust-screen-max-height 125px)
		height: calc(94vh - 77px)
		@media only screen and (min-height: 831px) and (max-height: 960px)
			height: calc(94.5vh - 77px)
		@media only screen and (min-height: 961px) and (max-height: 1080px)
			height: calc(95vh - 77px)
		@media only screen and (min-height: 1081px)
			height: calc(95.5vh - 77px)

	&-footer
		border-top: 1px solid #eee
		border-radius: 0 0 11px 11px
		padding: 14px 20px 14px 20px
		height: 77px
		min-height: 77px
		max-height: 77px
		box-shadow: 0 -8px 8px -8px rgba(0, 0, 0, 0.09)
		
		&__form
			position: absolute
			width: 100%
			padding-right: 40px
			bottom: 19px

	&__header
		display: flex
		justify-content: space-between
		border-bottom: 1px solid $border-color
		padding-bottom: 24px
		line-height: 1
		padding-bottom: 24px

	&__title
		margin-top: 4px

		&.layout__header__title
			font-size: 20px
			font-weight: 500

			img
				margin-right: 12px
			span
				position: relative
				top: 2px

	.default-screen
		margin-top: 120px
		text-align: center
		> .notice-message
			margin-top: 22px
			font-size: 16px
			color: $dark-grey3
